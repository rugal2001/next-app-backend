{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES6"],
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*"]
}


